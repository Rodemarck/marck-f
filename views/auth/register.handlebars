<div class="container">
    <form action="/login" method="post" class="row needs-validation">
        <div class="col-md4">
            <label for="login" class="form-label">Login</label>
            <input type="text" class="form-control {{#if erro.login}}is-invalid{{/if}}" name="login" id="login">
            {{#if erro.login}}
                <div class="invalid-feedback">
                    {{erro.login}}
                </div>
            {{/if}}
        </div>
        <div class="col-md4">
            <label for="email" class="form-label">E-mail</label>
            <input type="email" class="form-control {{#if erro.email}}is-invalid{{/if}}" name="email" id="email">
            {{#if erro.name}}
                <div class="invalid-feedback">
                    {{erro.email}}
                </div>
            {{/if}}
        </div>
        <div class="col-md4">
            <label for="name" class="form-label">Nome</label>
            <input type="text" class="form-control {{#if erro.name}}is-invalid{{/if}}" name="name" id="name">
            {{#if erro.name}}
                <div class="invalid-feedback">
                    {{erro.name}}
                </div>
            {{/if}}
        </div>
        <div class="col-md4">
            <label for="password" class="form-label">Senha</label>
            <input type="password" class="form-control {{#if erro.password}}is-invalid{{/if}}" name="password" id="password">
            {{#if erro.password}}
                <div class="invalid-feedback">
                    {{erro.password}}
                </div>
            {{/if}}
        </div>
         <div class="col-md4">
            <label for="confirm" class="form-label">Confirmar senha</label>
            <input type="password" class="form-control {{#if erro.password}}is-invalid{{/if}}" name="confirm" id="confirm">
            {{#if erro.password}}
                <div class="invalid-feedback">
                    {{erro.password}}
                </div>
            {{/if}}
        </div>
        <div class="col-md4">
            <button type="submit">submit</button>
        </div>
    </form>
</div>
